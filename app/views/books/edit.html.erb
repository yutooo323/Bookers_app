<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
  <% @book.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<%= form_with model:@book, local: true do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="acsions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
