<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--新規投稿欄-->
<h2>New book<h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title<h4>
  <%= f.text_field :title %>
  <h4>Body<h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
